{
  //
  // Diff Editor
  //
  "diffEditor.ignoreTrimWhitespace": true,
  //
  // Editor
  //
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  //
  // Files
  //
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": false
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
}
